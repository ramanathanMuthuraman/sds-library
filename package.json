{
  "name": "@ds/sds",
  "version": "0.1.0",
  "description": "Simple Design System - A comprehensive React-based design system with Figma integration",
  "type": "module",
  "main": "dist/sds.es.js",
  "module": "dist/sds.es.js",
  "style": "dist/sds.css",
  "exports": {
    ".": {
      "types": "./dist/types/ui/index.d.ts",
      "import": "./dist/sds.es.js",
      "default": "./dist/sds.es.js"
    },
    "./style": "./dist/sds.css",
    "./package.json": "./package.json"
  },
  "types": "./dist/types/ui/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "app:dev": "vite",
    "app:build": "tsc && vite build",
    "app:lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "app:preview": "vite preview",
    "storybook": "storybook dev -p 6006 --no-open",
    "storybook:build": "storybook build --output-dir dist/storybook",
    "build": "npm run app:build && npm run storybook:build",
    "build:lib": "npm run clean && npx tsc -p tsconfig.lib.json && npx vite build -c vite.lib.config.ts",
    "prepublishOnly": "npm run build:lib",
    "script:dev-resources": "cd scripts/dev-resources; node --env-file=../../.env app.mjs; cd -;",
    "script:icons": "cd scripts/icons; node --env-file=../../.env app.mjs --skip-rest-api; cd -;",
    "script:icons:rest": "cd scripts/icons; node --env-file=../../.env app.mjs; cd -;",
    "script:tokens": "cd scripts/tokens; node --env-file=../../.env app.mjs --skip-rest-api; cd -;",
    "script:tokens:rest": "cd scripts/tokens; node --env-file=../../.env app.mjs; cd -;"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-aria-components": "^1.10.1"
  },
  "devDependencies": {
    "@figma/code-connect": "^1.3.6",
    "@react-types/shared": "^3.23.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/manager-api": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/theming": "^8.6.12",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "clsx": "^2.1.1",
    "csstype": "^3.1.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "^0.8.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "react": "^18.2.0",
    "react-aria-components": "^1.10.1",
    "react-dom": "^18.2.0",
    "storybook": "^8.6.12",
    "typescript": "^5.0.2",
    "vite": "^6.3.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ram-ui-dev/custom-sds.git"
  },
  "keywords": [
    "react",
    "design-system",
    "ui",
    "components",
    "accessibility",
    "figma"
  ],
  "author": "Ram UI Dev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ram-ui-dev/custom-sds/issues"
  },
  "homepage": "https://github.com/ram-ui-dev/custom-sds#readme",
  "publishConfig": {
    "access": "public"
  }
}
