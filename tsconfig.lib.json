{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/types",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "data": ["./data"],
      "compositions": ["./ui/compositions"],
      "hooks": ["./ui/hooks"],
      "icons": ["./ui/icons"],
      "images": ["./ui/images"],
      "layout": ["./ui/layout"],
      "primitives": ["./ui/primitives"],
      "utils": ["./ui/utils"],
      "types": ["./types"]
    }
  },
  "include": ["src/ui", "src/types"],
  "exclude": [
    "src/App.tsx",
    "src/main.tsx",
    "**/*.stories.tsx",
    "**/*.test.tsx"
  ]
}
